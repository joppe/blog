<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Apestaartje.info{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/aapblog/css/screen.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <meta name="description" content="Blog over php/javascript/mysql/linux">

        {{ google_analytics | raw }}
    </head>

    <body>
        {% block body %}
            {% block top %}
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">Apestaartje.info</a>
                        </div>
                        <div id="navbar" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="/">Home</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}

            {% block main %}
            {% endblock %}

            {% block footer %}
                <div class="container">
                    <footer>
                        <p>apestaartje.info</p>
                    </footer>
                </div>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/aapblog/vendor/es6-module-loader/dist/es6-module-loader.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/aapblog/vendor/system.js/dist/system.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/aapblog/js/system.conf.js') }}"></script>
        {% endblock %}
    </body>
</html>
