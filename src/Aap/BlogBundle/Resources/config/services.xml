<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="aap_blog.root_dir">%kernel.root_dir%/..</parameter>
        <parameter key="aap_blog.posts">%kernel.root_dir%/data/posts.yml</parameter>
    </parameters>

    <services>
        <service id="aap_blog.markdown" class="Aap\BlogBundle\Service\Markdown\Markdown">
        </service>

        <service id="aap_blog.blog_post_factory" class="Aap\BlogBundle\Service\BlogPost\BlogFactory">
            <argument>%aap_blog.root_dir%</argument>
        </service>

        <service id="aap_blog.blog_post" class="Aap\BlogBundle\Service\BlogPost\BlogPost">
            <argument type="service" id="aap_blog.blog_post_factory"></argument>
            <argument>%aap_blog.posts%</argument>
        </service>
    </services>
</container>
